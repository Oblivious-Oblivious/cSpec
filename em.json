{
  "name": "cSpec",

  "version": "0.3.0",

  "dependencies": {},

  "dev-dependencies": {},

  "build": "make",

  "compile-flags": {
    "cc": "clang",
    "debug": {
      "opt": "-Og",
      "version": "-std=c99",
      "flags": "-g",
      "warnings": "-Wall -Wextra -Werror -pedantic -pedantic-errors -Wpedantic"
    },
    "release": {
      "opt": "-O2",
      "version": "-std=c2x",
      "flags": "",
      "warnings": ""
    },
    "test": {
      "opt": "-Og",
      "version": "-std=c99",
      "flags": "-g",
      "warnings": "-Wall -Wextra -Werror -pedantic -pedantic-errors -Wpedantic"
    }
  },

  "license": "gpl-v3"
}
